<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

    <body>
        <%- include('partials/header') %>
            <div class="container">
                <section class="listadoProductos">
                    <div class="row productos">
                        <div class="titulo col-12">
                            <h2>
                                <%= title %>
                            </h2>
                        </div>
                        <% productos.forEach(producto => { %>
                            <div class="col-12 col-md-6 col-lg-3">
                                <div class="contenido">
                                    <figure>
                                        <a href="/products/productDetail/<%= producto.id %> "><img src="/images/<%= producto.imagen %>" width="100%" height="100%" alt=" " >
                                </a>
                                    </figure>
                                    <article>
                                        <h2>
                                           $ <%- (producto.precio) %>
                                        </h2>
                                                <p>
                                                    <%- producto.nombre %>
                                                </p>
                                                
                                                <i class="fas fa-truck "></i>
                                    </article>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </section>
            </div>
        <%- include('partials/footer') %>
  </body>

</html>