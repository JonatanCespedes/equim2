<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %> 
  <body>
    <%- include('partials/header') %>
    <!--LOGIN-->
    <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <div class>
          <section>
            <h2> Ingresar</h2>
       <form action="/users/login" method="POST" id="formLogin">
      <div class="form-row">
       <div class="form-group col-md-6">
         <label for="inputEmail">Email</label>
         <input name="emailLogin" type="email" class="form-control" id="inputEmail">
         <small class="text-danger" ><%= (typeof errors!= 'undefined' && errors.emailLogin)?errors.emailLogin.msg: "" %> </small>
         <small class="text-danger" id="errorEmail"></small>
       </div>
       
         <div class="form-group col-md-6">
          <label for="inputPassword">Contraseña</label>
          <input name="pass" type="password" class="form-control" id="inputPassword" >
          <small class="text-danger"><%= (typeof errors != 'undefined' && errors.pass)?errors.pass.msg: "" %> </small>
          <small class="text-danger"><%= (typeof errors != 'undefined' && errors.custom)?errors.custom.msg: "" %> </small>
          <small class="text-danger" id="errorPassword"></small>
        </div>
        
           <button type="submit" class="btn btn-primary">Ingresar</button>
       </div>
      </form>
          </section>
          </div>
          
        </div>
      </div>

    </div>
    <div>
      
        
        
    </div>
    
    <!--REGISTRO-->
    <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <div class>
          <section>
            <h2>Registrate</h2>
       <form action="/users/registro" method="post" id="formReg">
      <div class="form-row">
       <div class="form-group col-md-6">
         <label for="email">Email</label>
         <input type="email" class="form-control" name="email" id="inputEmail2">
         <small style="color: red; list-style: circle;"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </small>
         <small class="text-danger" id="errorEmail2"></small>
       </div>
        <div class="form-group col-md-6">
          <label for="password">Contraseña</label>
          <input type="password" class="form-control" name="password" id="inputPassword2" >
          <small style="color: red; list-style: circle;"><%= (typeof errors != 'undefined' && errors.password)?errors.password.msg: "" %></small>
          <small class="text-danger" id="errorPassword2"></small>
        </div>
        <div class="form-group col-md-6">
          <label for="nombre">Nombre</label>
          <input type="text" class="form-control" name="nombre" id="inputNombre">
          <small style="color: red; list-style: circle;"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %></small>
          <small class="text-danger" id="errorNombre"></small>
        </div>
        <div class="form-group col-md-6">
          <label for="apellido">Apellido</label>
          <input type="text" class="form-control" name="apellido" id="inputApellido">
          <small style="color: red; list-style: circle;"><%= (typeof errors != 'undefined' && errors.apellido)?errors.apellido.msg: "" %></small>
          <small class="text-danger" id="errorApellido"></small>
        </div>
        <div class="form-group col-md-4">
          <label for="direccion">Direccion</label>
          <input type="text" class="form-control" name="direccion">
        </div>
        <div class="form-group col-md-4">
          <label for="ciudad">Ciudad</label>
          <input type="text" class="form-control" name="ciudad">
        </div>
        <div class="form-group col-md-4">
          <label for="provincia">Provincia</label>
          <input type="text" class="form-control" name="provincia" >
        </div>
        
        
           <button type="submit" class="btn btn-primary">Registrarse</button>

      </div>
      
    </form>
      </section>
          </div>
          
        </div>
      </div>

    </div>



  
     <!--EMPIEZA EL FOOTER-->
   <%- include('partials/footer') %>
   <script src="/javascripts/registro.js"></script>    
</body>
</html>
