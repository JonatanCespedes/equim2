<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

    <body>
        <%- include('partials/header') %>
            <div class="container">
                <section class="perfilUsuario">
                    <div class="row perfil">

                        <div class="titulo col-12">
                            <h2>
                                <%= title %>
                            </h2>
                        </div>

                        <div class="contenido text-left">

                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item " role="presentation">
                                    <a class="nav-link  active" id="home-tab" data-toggle="tab" href="#detalle" role="tab" aria-controls="home" aria-selected="true">Detalle del Producto</a>
                                </li>
                                <li class="nav-item " role="presentation">
                                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#editar" role="tab" aria-controls="detalle" aria-selected="false">Editar Producto</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">

                                <div class="tab-pane fade show active " id="detalle" role="tabpanel" aria-labelledby="profile-tab">

                                    <div class="row p-3">
                                        <!-- <div class="col-12">
                                            <div class="row">
                                                <div class="col-1">
                                               
                                                        <a href="/products/show/ " class="text-warning"><i class="fas fa-chevron-circle-left"></i></a>
                                                        
                                                </div>
                                                <div class="col-10">
                                                    <h3 class="text-center">
                                                        
                                                    </h3>
                                                </div>
                                                <div class="col-1">
                                                   
                                                        <a href="/products/show/ " class="text-warning"><i class="fas fa-chevron-circle-right"></i></a>

                                                         
                                                </div>
                                            </div>


                                        </div> -->
                                        <div class="col-12 col-md-4 mt-3">
                                            <figure class="text-center">
                                                <img src="/images/<%= producto.imagen %> " alt="" class="img-fluid">
                                            </figure>
                                        </div>
                                        <div class="col-12 col-md-8 mt-3">
                                            <p>
                                                <%= producto.descripcion %>
                                            </p>
                                            <div class="row">
                                                <div class="col-12 col-lg-4">
                                                    <span><b>Categor√≠a:</b> 
                                                        <%= producto.categoria.nombre %>
                                                    </span>
                                                </div>
                                                <div class="col-12 col-md-6 col-lg-4">
                                                    <span><b>Precio:</b>  $
                                                    <%=producto.precio.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")%>
                                                </span>
                                                </div>
                                               
                                            </div>
                                        </div>


                                    </div>
                                </div>
                                <div class="tab-pane fade " id="editar" role="tabpanel" aria-labelledby="home-tab">
                                    <form action="/products/edit/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                                        <div class="row p-3">
                                            <div class="form-group col-12">
                                                <input class="form-control" type="text" value="<%= producto.nombre%>" name="nombre" id="inputNombre">
                                                <small class="text-danger" id="errorNombre"></small>
                                            </div>
                                            <div class="col-12 col-md-4 col-xl-4 mt-3">
                                                <figure class="text-center">
                                                    <img src="/images/<%= producto.imagen %> " alt="" class="img-fluid">
                                                </figure>
                                                <input type="file" name="imagen">
                                            </div>
                                            <div class="form-group col-12 col-md-8 col-xl-8 mt-3">
                                                <textarea class="form-control" rows="7" name="descripcion" id="inputDescripcion"><%= producto.descripcion %></textarea>
                                                <p>
                                                </p>
                                                <div class="row">
                                                    <div class="form-group col-12 col-lg-4">

                                                        <small class="text-danger" id="errorDescripcion"></small>  
                                                    </div>
                                                   
                                                    <label for="category">Categoria:</label>
                                                    <select name="category" id="categorySelect">
                                                      <option hidden selected value="0" >Elija una Categoria</option>
                                                     <% categorias.forEach(categoria => { %>
                                                      <option value="<%= categoria.id %>"<% if(categoria.id == producto.id_categoria){%> selected <% } %>><%= categoria.nombre %> </option>
                                                     <% }) %>
                                                  </select>
                                                    <div class="form-group col-6 col-lg-4">

                                                        <div class="input-group mb-2 mr-sm-2">
                                                            <div class="input-group-prepend">
                                                                <div class="input-group-text">$</div>
                                                            </div>
                                                            <input type="text" class="form-control" value="<%=producto.precio%>" name="precio">
                                                        </div>
                                                    </div>
                                                   
                                                    <div class="col-12 d-flex justify-content-end">
                                                        <button class="btn btn-danger mr-2">Cancelar</button>
                                                        <button class="btn btn-info" type="submit" name="id" value="<%= producto.id %> ">Guardar</button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            </section>
            </div>




            <%- include('partials/footer') %>
            <script src="/javascripts/editProducts.js"></script>
        </body>

</html>